{
    "name": "spandx",
    "version": "2.0.0",
    "description": "Develop locally, proxy to prod, browser-sync, inject Portal Chrome.",
    "main": "app/spandx.js",
    "bin": "app/cli.js",
    "files": [
        "app",
        "spandx.config.js"
    ],
    "scripts": {
        "test": "jasmine spec/spandx/*.js",
        "start": "node app/spandx.js",
        "dev": "nodemon spandx.js",
        "debug": "node-debug spandx.js",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "{app,spec}/**/*.{js,json}": [
            "prettier --write",
            "git add"
        ],
        "examples/**/*.{js,json}": [
            "prettier --write",
            "git add"
        ],
        "README.md": [
            "doctoc README.md",
            "git add README.md"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/redhataccess/spandx.git"
    },
    "keywords": [
        "proxy",
        "local"
    ],
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/redhataccess/spandx/issues"
    },
    "homepage": "https://github.com/redhataccess/spandx#readme",
    "dependencies": {
        "browser-sync": "^2.24.7",
        "connect": "^3.6.6",
        "finalhandler": "^1.1.1",
        "hostile": "^1.3.2",
        "http-proxy": "^1.17.0",
        "inquirer": "7.0.0",
        "lodash": "^4.17.10",
        "nodesi": "^1.11.0",
        "porty": "^3.1.1",
        "print-colors": "^1.0.1",
        "request": "^2.88.0",
        "serve-static": "^1.13.2",
        "transformer-proxy": "^0.3.4",
        "yargs": "^14.0.0"
    },
    "devDependencies": {
        "doctoc": "1.4.0",
        "frisby": "2.1.2",
        "http-server": "0.11.1",
        "husky": "3.0.5",
        "jasmine": "3.4.0",
        "jasmine-spec-reporter": "4.2.1",
        "lint-staged": "9.2.5",
        "nodemon": "1.19.2",
        "opn": "5.5.0",
        "prettier": "1.18.2"
    }
}
